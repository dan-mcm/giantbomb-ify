/* active version implements image change by icon click */
{
  "name": "GiantBomb-ify",
  "version": "0.1",
  "manifest_version" : 2,
  "description": "Replaces all images with GB Staff",
  "icons": {
    "16": "logo-small.png",
    "48": "logo-small.png",
    "128": "logo-small.png"
  },
  "background" : {
    "scripts" : ["scripts/background.js"]
  },
  "browser_action": {
    "default_icon": "logo-small.png"
  },
  "web_accessible_resources": ["images/*.jpg"],
  "permissions": ["activeTab"]
}

